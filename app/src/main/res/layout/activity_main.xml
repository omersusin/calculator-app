<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/glassPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Blur only here (background acrylic layer) -->
        <View
            android:id="@+id/blurLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_glass_panel" />

        <!-- Content stays sharp -->
        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.15"
                android:orientation="vertical"
                android:gravity="bottom|end"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="="
                    android:textColor="@color/fluent_text_secondary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="start" />

                <TextView
                    android:id="@+id/tvExpression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="@color/fluent_text_primary"
                    android:textSize="38sp"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    android:ellipsize="start" />
            </LinearLayout>

            <!-- Keypad -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:columnCount="4"
                android:rowCount="5"
                android:useDefaultMargins="true">

                <Button android:id="@+id/btnPercent" style="@style/CalcKey" android:text="%" />
                <Button android:id="@+id/btnSign" style="@style/CalcKey" android:text="+/-" />
                <Button android:id="@+id/btnBack" style="@style/CalcKey" android:text="⌫" />
                <Button android:id="@+id/btnDiv" style="@style/CalcKeyOperator" android:text="÷" />

                <Button android:id="@+id/btn7" style="@style/CalcKey" android:text="7" />
                <Button android:id="@+id/btn8" style="@style/CalcKey" android:text="8" />
                <Button android:id="@+id/btn9" style="@style/CalcKey" android:text="9" />
                <Button android:id="@+id/btnMul" style="@style/CalcKeyOperator" android:text="×" />

                <Button android:id="@+id/btn4" style="@style/CalcKey" android:text="4" />
                <Button android:id="@+id/btn5" style="@style/CalcKey" android:text="5" />
                <Button android:id="@+id/btn6" style="@style/CalcKey" android:text="6" />
                <Button android:id="@+id/btnSub" style="@style/CalcKeyOperator" android:text="−" />

                <Button android:id="@+id/btn1" style="@style/CalcKey" android:text="1" />
                <Button android:id="@+id/btn2" style="@style/CalcKey" android:text="2" />
                <Button android:id="@+id/btn3" style="@style/CalcKey" android:text="3" />
                <Button android:id="@+id/btnAdd" style="@style/CalcKeyOperator" android:text="+" />

                <Button android:id="@+id/btnClear" style="@style/CalcKey" android:text="C" />
                <Button android:id="@+id/btn0" style="@style/CalcKey" android:text="0" />
                <Button android:id="@+id/btnDot" style="@style/CalcKey" android:text="." />
                <Button android:id="@+id/btnEq" style="@style/CalcKeyAccent" android:text="=" />
            </GridLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
